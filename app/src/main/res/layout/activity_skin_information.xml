<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_skin_information"
    tools:context="com.qhacks.moledetector.SkinInformation"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">


    <RelativeLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arm"
            android:scaleType="centerCrop"
            android:scaleX="1.1"
            android:scaleY="1.1"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="2dp"
                android:background="#80000000">

                <TextView
                    android:text="You may have"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_marginTop="-7dp"
                    android:id="@+id/diagnosis_title"
                    android:text="Nothing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
            </LinearLayout>
        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/select_rectangle">
    </View>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingTop="14dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <LinearLayout
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Brief description on what caused these symptoms and other important details"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:gravity="center_horizontal"
                android:text="Random tip to keep skin safe from ultra-violet rays and what-not"
                android:textSize="18sp"
                android:textColor="#000000"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="You should see your family doctor"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_alignParentBottom="true"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="If you really think you have an issue"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_alignParentBottom="true"

                    />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
